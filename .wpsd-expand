#!/bin/bash
############################################################################
#                                                                          #
#              Systemd-Aware Universal WPSD Partition Expander             #
#                                                                          #
############################################################################

# Make sure we are root
if [ "$(id -u)" != "0" ]; then
  echo "You need to be root to run this command..."
  exit 1
fi

# Check for required tools
for CMD in findmnt lsblk parted fdisk systemctl; do
  if ! command -v $CMD &> /dev/null; then
    echo "Error: Required command '$CMD' not found. Please install it."
    exit 1
  fi
done

# --- Universal Partition Detection Logic ---
ROOT_PART_PATH=$(findmnt -n -o SOURCE /)
if [ $? -ne 0 ]; then
  echo "Error: Could not find the root filesystem."
  exit 1
fi

if [[ "$ROOT_PART_PATH" == "PARTUUID="* ]]; then
  RESOLVED_PATH=$(findfs "$ROOT_PART_PATH")
  if [ -z "$RESOLVED_PATH" ]; then
    echo "Error: Could not resolve $ROOT_PART_PATH to a device."
    exit 1
  fi
  ROOT_PART_PATH="$RESOLVED_PATH"
fi

ROOT_PART=$(basename "$ROOT_PART_PATH")
ROOT_DEV_NAME=$(lsblk -no pkname "$ROOT_PART_PATH")

if [ -z "$ROOT_DEV_NAME" ]; then
  echo "Error: Could not determine the parent device for $ROOT_PART."
  exit 1
fi
ROOT_DEV="/dev/$ROOT_DEV_NAME"

PART_NUM=$(cat "/sys/block/$ROOT_DEV_NAME/$ROOT_PART/partition")
if [ -z "$PART_NUM" ]; then
  echo "Error: Could not determine the partition number for $ROOT_PART."
  exit 1
fi

LAST_PART_NUM=$(parted "$ROOT_DEV" -ms unit s p | tail -n 1 | cut -f 1 -d:)
if [ "$LAST_PART_NUM" -ne "$PART_NUM" ]; then
  echo "Error: $ROOT_PART is not the last partition. This script can only expand the last partition."
  exit 1
fi

PART_START=$(parted "$ROOT_DEV" -ms unit s p | grep "^${PART_NUM}:" | cut -f 2 -d: | sed 's/s$//')
if [ -z "$PART_START" ]; then
  echo "Error: Could not get start sector of partition $PART_NUM on $ROOT_DEV."
  exit 1
fi

echo "Resizing partition $PART_NUM on $ROOT_DEV to fill the disk."
fdisk "$ROOT_DEV" <<EOF
p
d
$PART_NUM
n
p
$PART_NUM
$PART_START

p
w
EOF

# --- Setup one-shot resize service based on OS version ---

source /usr/local/sbin/.wpsd-common-funcs

# If OS is Debian 12 (Bookworm) or newer, use systemd.
if [ -n "$OS_VER" ] && [ "${OS_VER}" -ge 12 ]; then

  ## Systemd method for Debian 12+ ##
  cat << EOF > /etc/systemd/system/resize2fs-once.service
[Unit]
Description=Resize root filesystem to fill partition
# Ensures filesystems are mounted read-write before this runs
After=local-fs.target

[Service]
Type=oneshot
ExecStart=/sbin/resize2fs /dev/${ROOT_PART}
# These cleanup commands run only after the resize is successful
ExecStartPost=/bin/systemctl disable resize2fs-once.service
ExecStartPost=/bin/rm /etc/systemd/system/resize2fs-once.service

[Install]
# A more reliable target that ensures the system is ready
WantedBy=multi-user.target
EOF

  # Enable the one-shot service to run on next boot
  systemctl daemon-reload
  systemctl enable resize2fs-once.service > /dev/null 2>&1

else

  ## Legacy init.d method for older systems ##
  echo "Info: Older OS detected or OS is not Debian. Using legacy init.d method."
  cat <<EOF > /etc/init.d/resize2fs_once &&
#!/bin/sh
### BEGIN INIT INFO
# Provides:          resize2fs_once
# Required-Start:
# Required-Stop:
# Default-Start: S
# Default-Stop:
# Short-Description: Resize the root filesystem to fill partition
# Description:
### END INIT INFO

. /lib/lsb/init-functions

case "\$1" in
  start)
    log_daemon_msg "Starting resize2fs_once" &&
    resize2fs /dev/$ROOT_PART &&
    # Remove the script and its links so it only runs once
    update-rc.d resize2fs_once remove &&
    rm /etc/init.d/resize2fs_once &&
    log_end_msg \$?
    ;;
  *)
    echo "Usage: \$0 start" >&2
    exit 3
    ;;
esac
EOF
  chmod +x /etc/init.d/resize2fs_once &&
  update-rc.d resize2fs_once defaults

fi

touch /boot/.expanded

# Finished, so tell the user to reboot
echo ""
echo "âœ… The partition table has been updated."
echo "Please reboot now to allow the filesystem to be expanded."

exit 0
