#!/bin/bash

# run this as `FORCE_COLOR=1 bash .wpsd-show-term-colors | more`

source /usr/local/sbin/.wpsd-common-funcs

print_color_line() {
    local var_name=$1
    eval color_var_value="\$$var_name"
    printf "%-30s | ${color_var_value}███${COL_NC}" "$var_name"
}

echo "### Standard and Bright Colors ###"
echo -e "-------------------------------------------------------------------------\n"
printf "%-30s | %-30s |\n" "Variable Name" "Color Sample"
echo -e "-------------------------------------------------------------------------\n"

for i in {0..7}; do
    case $i in
        0) var1="COL_BLACK";;
        1) var1="COL_RED";;
        2) var1="COL_GREEN";;
        3) var1="COL_YELLOW";;
        4) var1="COL_BLUE";;
        5) var1="COL_MAGENTA";;
        6) var1="COL_CYAN";;
        7) var1="COL_WHITE";;
    esac
    
    case $((i+8)) in
        8) var2="COL_BRIGHT_BLACK";;
        9) var2="COL_BRIGHT_RED";;
        10) var2="COL_BRIGHT_GREEN";;
        11) var2="COL_BRIGHT_YELLOW";;
        12) var2="COL_BRIGHT_BLUE";;
        13) var2="COL_BRIGHT_MAGENTA";;
        14) var2="COL_BRIGHT_CYAN";;
        15) var2="COL_BRIGHT_WHITE";;
    esac

    print_color_line "$var1"
    echo -e " |  "
    print_color_line "$var2"
    echo ""
done

echo ""
echo "### 216-Color Cube ###"
echo -e "-------------------------------------------------------------------------\n"
printf "%-30s | %-30s |\n" "Variable Name" "Color Sample"
echo -e "-------------------------------------------------------------------------\n"

for ((i = 16; i <= 231; i += 2)); do
    r1=$(( (i - 16) / 36 ))
    g1=$(( ((i - 16) % 36) / 6 ))
    b1=$(( (i - 16) % 6 ))
    var1="COL_CUBE_R${r1}_G${g1}_B${b1}"
    print_color_line "$var1"
    
    j=$(( i + 1 ))
    r2=$(( (j - 16) / 36 ))
    g2=$(( ((j - 16) % 36) / 6 ))
    b2=$(( (j - 16) % 6 ))
    var2="COL_CUBE_R${r2}_G${g2}_B${b2}"
    printf " | "
    print_color_line "$var2"
    echo ""
done

echo ""
echo "### Grayscale Shades ###"
echo -e "-------------------------------------------------------------------------\n"
printf "%-30s | %-30s |\n" "Variable Name" "Color Sample"
echo -e "-------------------------------------------------------------------------\n"

for ((i = 232; i <= 255; i += 2)); do
    gray1=$(( i - 231 ))
    var1="COL_GRAYSCALE_${gray1}"
    print_color_line "$var1"

    if (( i + 1 <= 255 )); then
        gray2=$(( (i + 1) - 231 ))
        var2="COL_GRAYSCALE_${gray2}"
        printf " | "
    fi
    echo ""
done
